{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 2
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin"
            }
        }
    ]
}

